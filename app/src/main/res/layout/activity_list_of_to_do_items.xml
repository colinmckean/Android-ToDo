<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.example.todo.ListOfToDoItems"
    android:orientation="vertical">

    <Button
        android:id="@+id/addNewToDo_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToAddNewToDoActivity"
        android:text="ADD NEW TODO." />
    <Button
        android:id="@+id/deleteList_Btn"
        android:text="DELETE LISt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteList"/>

    <ListView
        android:id="@+id/listAllToDos_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
